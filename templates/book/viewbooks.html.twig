{% extends 'base.html.twig' %}

{% block title %}All books{% endblock %}

{% block body %}

<h1>All books</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>ISBN</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.getId|e }}</td>
                    <td>{{ book.getTitel|e }}</td>
                    <td>{{ book.getIsbn|e }}</td>
                    <td>{{ book.getAuthor|e }}</td>
                    <td>
                        <a href="{{ path('book_by_id', { id: book.getId }) }}">See book</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
